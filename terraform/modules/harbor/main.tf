      type: Opaque
    - apiVersion: v1
      kind: Secret
      metadata:
        name: minio-access-secret
        namespace: ${kubernetes_namespace.ns.metadata.0.name}
      data:
        accesskey: YWRtaW4=
        secretkey: bWluaW8xMjM=
        secret: bWluaW8xMjM=
      type: Opaque
    - apiVersion: v1
      kind: Secret
      metadata:
        name: redis
        namespace: ${kubernetes_namespace.ns.metadata.0.name}
      type: Opaque
